<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:defaultToDeviceProtectedStorage="true"
        android:directBootAware="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">

        <activity
            android:name=".common.ForegroundIntentStartupActivity"
            android:excludeFromRecents="true"
            android:noHistory="true"
            android:taskAffinity="" />

        <activity
            android:name=".common.DummyActivity"
            android:excludeFromRecents="true"
            android:noHistory="true"
            android:taskAffinity="" />

        <service
            android:name=".services.tile.VolumeService"
            android:exported="true"
            android:icon="@drawable/ic_volume_high"
            android:label="@string/volume"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <service
            android:name=".services.tile.DeveloperOptionsService"
            android:exported="true"
            android:icon="@drawable/ic_developer_options"
            android:label="@string/developer_options"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <service
            android:name=".services.tile.LockScreenService"
            android:enabled="@bool/is_android_api_28"
            android:exported="true"
            android:icon="@drawable/ic_lock"
            android:label="@string/lock_screen"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <service
            android:name=".services.tile.ScreenshotService"
            android:enabled="@bool/is_android_api_28"
            android:exported="true"
            android:icon="@drawable/ic_screenshot"
            android:label="@string/screenshot"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <service
            android:name=".services.tile.PowerOffMenuService"
            android:exported="true"
            android:icon="@drawable/ic_power_menu"
            android:label="@string/power_menu"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <service
            android:name=".services.tile.AutostartService"
            android:exported="true"
            android:icon="@drawable/ic_autostart"
            android:label="@string/autostart"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <service
            android:name=".services.GlobalActionService"
            android:exported="true"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility" />
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
        </service>

    </application>

</manifest>