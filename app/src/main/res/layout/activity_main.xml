<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:menu="@menu/menu_main"
            app:title="@string/app_name" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/icon_left"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_super_su_24"
            app:layout_constraintBottom_toTopOf="@id/title_left"
            app:layout_constraintEnd_toStartOf="@id/guideline_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title_left"
            style="@style/TextAppearance.TitleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/root"
            app:layout_constraintBottom_toTopOf="@id/btn_root"
            app:layout_constraintEnd_toEndOf="@id/icon_left"
            app:layout_constraintStart_toStartOf="@id/icon_left"
            app:layout_constraintTop_toBottomOf="@id/icon_left" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_root"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/allow"
            app:layout_constraintEnd_toEndOf="@id/icon_left"
            app:layout_constraintStart_toStartOf="@id/icon_left"
            app:layout_constraintTop_toBottomOf="@id/title_left" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/icon_right"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_write_settings_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline_vertical"
            app:layout_constraintTop_toTopOf="@id/icon_left" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title_right"
            style="@style/TextAppearance.TitleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/write_settings"
            app:layout_constraintEnd_toEndOf="@id/icon_right"
            app:layout_constraintStart_toStartOf="@id/icon_right"
            app:layout_constraintTop_toBottomOf="@id/icon_right" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_write_settings"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/allow"
            app:layout_constraintEnd_toEndOf="@id/icon_right"
            app:layout_constraintStart_toStartOf="@id/icon_right"
            app:layout_constraintTop_toBottomOf="@id/title_right" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/services"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:paddingBottom="12dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_root" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>